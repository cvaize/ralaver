<label class="{{#if label_class}}{{label_class}} {{/if}}admin-field{{#if errors}} admin-danger{{/if}}"
       {{#if style}} style="{{style}}"{{/if}}>
    {{#if label}}<span class="admin-field__text">{{label}}</span>{{/if}}
    <input class="{{#if input_class}}{{input_class}} {{/if}}admin-field__input"
        {{#if type}} type="{{type}}" {{/if}}
        {{#if name}} name="{{name}}" {{/if}}
        {{#if value}} value="{{value}}" {{/if}}
        {{#if readonly}} readonly {{/if}}
        {{#if required}} required {{/if}}
    >
    {{#if errors}}
        {{#each errors}}
            <span class="admin-text--mini admin-text--danger">{{this}}</span>
        {{/each}}
    {{/if}}
</label>