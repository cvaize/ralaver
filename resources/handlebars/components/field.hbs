<label class="{{#if field_class}}{{field_class}} {{/if}}admin-field{{#if errors}} admin-danger{{/if}}"
       {{#if style}} style="{{style}}"{{/if}}>
    {{#if label}}<span class="{{#if label_class}}{{label_class}} {{/if}}admin-field__text">{{label}}</span>{{/if}}
    {{#if (eq type "select")}}
        <select class="{{#if input_class}}{{input_class}} {{/if}}admin-field__input"
            {{#if input_style}} style="{{input_style}}"{{/if}}
            {{#if form}} form="{{form}}" {{/if}}
            {{#if type}} type="{{type}}" {{/if}}
            {{#if name}} name="{{name}}" {{/if}}
            {{#if multiple}} multiple {{/if}}
            {{#if required}} required {{/if}}
        >
            {{#if placeholder}}
                <option value="">{{placeholder}}</option>
            {{/if}}
            {{#if options_values}}
                {{#each options_values as |option_value|}}
                    <option value="{{option_value}}"
                        {{#if (eq value option_value)}} selected{{/if}}
                    >{{option_value}}</option>
                {{/each}}
            {{/if}}
            {{#if options}}
                {{#each options as |option|}}
                    <option value="{{lookup option option_value_key}}"
                        {{#if (eq value (lookup option option_value_key))}} selected{{/if}}
                    >{{lookup option option_label_key}}</option>
                {{/each}}
            {{/if}}
        </select>
    {{else if (eq type "textarea") }}
        <textarea class="{{#if input_class}}{{input_class}} {{/if}}admin-field__input"
            {{#if input_style}} style="{{input_style}}"{{/if}}
            {{#if form}} form="{{form}}" {{/if}}
            {{#if type}} type="{{type}}" {{/if}}
            {{#if name}} name="{{name}}" {{/if}}
            {{#if placeholder}} placeholder="{{placeholder}}" {{/if}}
            {{#if readonly}} readonly {{/if}}
            {{#if required}} required {{/if}}
        >{{#if value}}{{value}}{{/if}}</textarea>
    {{else }}
        <input class="{{#if input_class}}{{input_class}} {{/if}}admin-field__input"
            {{#if input_style}} style="{{input_style}}"{{/if}}
            {{#if form}} form="{{form}}" {{/if}}
            {{#if type}} type="{{type}}" {{/if}}
            {{#if name}} name="{{name}}" {{/if}}
            {{#if value}} value="{{value}}" {{/if}}
            {{#if placeholder}} placeholder="{{placeholder}}" {{/if}}
            {{#if multiple}} multiple {{/if}}
            {{#if readonly}} readonly {{/if}}
            {{#if required}} required {{/if}}
            {{#if autofocus}} autofocus {{/if}}
            {{#if autocomplete}} autocomplete="{{autocomplete}}" {{/if}}
            {{#if autocorrect}} autocorrect="{{autocorrect}}" {{/if}}
            {{#if autocapitalize}} autocapitalize="{{autocapitalize}}" {{/if}}
        >
    {{/if}}
    {{#if errors}}
        {{#each errors}}
            <span class="admin-text--mini admin-text--danger">{{this}}</span>
        {{/each}}
    {{/if}}
</label>