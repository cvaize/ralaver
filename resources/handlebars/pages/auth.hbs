{{#> components/login.hbs user=user lang=locale.code dark_mode=dark_mode title=title }}
    <div class="admin-login">
        <div class="admin-container admin-login__container">
            {{#if alerts}}
                <div class="admin-login__alerts">
                    {{#each alerts}}
                        {{> components/alert.hbs index=@index type=style content=content close=true }}
                    {{/each}}
                </div>
            {{/if}}
            <form class="admin-login__card"
                {{#if form.action}} action="{{form.action}}" {{/if}}
                {{#if form.method}} method="{{form.method}}" {{/if}}
            >

                {{#if locales and locale}}
                    <div class="admin-login__lang admin-dropdown" tabindex="-1">
                        <button class="admin-btn admin-dropdown__btn" type="button" style="text-transform: uppercase">
                            {{ locale.short_name }}
                        </button>
                        <ul class="admin-dropdown__menu">
                            {{#each locales}}
                                <li><a class="admin-dropdown__item" href="#"
                                       style="text-transform: uppercase">{{ short_name }}</a></li>
                            {{/each}}
                        </ul>
                    </div>
                {{/if}}
                {{#if back}}
                    <div class="admin-login__back">
                        <a href="{{back.href}}" class="admin-login__back-link">
                            <svg class="admin-icon--svg" xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                 viewBox="0 0 24 24">
                                <path d="M16.62 2.99a1.25 1.25 0 0 0-1.77 0L6.54 11.3a.996.996 0 0 0 0 1.41l8.31 8.31c.49.49 1.28.49 1.77 0s.49-1.28 0-1.77L9.38 12l7.25-7.25c.48-.48.48-1.28-.01-1.76z"/>
                            </svg>
                            {{back.label}}
                        </a>
                    </div>
                {{/if}}
                {{#if form.header}}
                    <h1 class="admin-login__header">{{form.header}}</h1>
                {{/if}}

                {{#if form.fields}}
                    {{#each form.fields}}
                        {{> components/field.hbs index=@index label=label type=type name=name value=value errors=errors }}
                    {{/each}}
                {{/if}}

                {{#if form.forgot_password or form.register or form.login}}
                    <div class="admin-login__nav">
                        {{#if form.forgot_password}}
                            <a href="{{form.forgot_password.href}}" class="admin-login__forgot-link">
                                {{form.forgot_password.label}}
                            </a>
                        {{/if}}
                        {{#if form.register}}
                            <a href="{{form.register.href}}" class="admin-login__register-link">
                                {{form.register.label}}
                            </a>
                        {{/if}}
                        {{#if form.login}}
                            <a href="{{form.login.href}}" class="admin-login__register-link">
                                {{form.login.label}}
                            </a>
                        {{/if}}
                    </div>
                {{/if}}

                {{#if form.errors}}
                    {{#each form.errors}}
                        <div class="admin-text--danger" style="margin: 0.5rem 0;">{{this}}</div>
                    {{/each}}
                {{/if}}

                {{#if form.submit.label}}
                    <button type="submit" class="admin-btn admin-login__submit">{{form.submit.label}}</button>
                {{/if}}

                {{#if form.submit.text}}
                    <div class="admin-text">{{form.submit.text}}</div>
                {{/if}}
            </form>
        </div>
    </div>
{{/components/login.hbs}}
